@model M151_Projekt.Models.Customer

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Prename")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.prename)
        </dd>

        <dt>
            @Html.DisplayName("Family Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.familyName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default btn-outline-primary" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Mortgagename")
            </th>
            <th>
                @Html.DisplayName("Rate")
            </th>
            <th>
                @Html.DisplayName("Riskname")
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.Mortgages)
        {
            <tr>
                <td>
                    @item.morgageName
                </td>
                <td>
                    @item.rate
                </td>
                <td>
                    @item.Risk.riskName
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Mortgage", new { id = item.id },null) |
                    @Html.ActionLink("Details", "Details", "Mortgage", new { id = item.id }, null) |
                    @Html.ActionLink("Delete", "Delete", "Mortgage", new { id = item.id }, null)
                </td>
            </tr>
        }

    </table>
</div>
